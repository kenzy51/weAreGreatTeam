{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "noEmit": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    /* Bundler mode */
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "./src/*",
        ".dist/*",
        ""
      ],
      "pages/*": [
        "src/pages/*"
      ],
      "shared/*": [
        "src/shared/*"
      ],
      "widgets/*": [
        "src/widgets/*"
      ]
    },
    /* Linting */
    "strict": true,
    "noFallthroughCasesInSwitch": true,
  },
  "include": [
    "src",
    "./declaration.d.ts"
  ],
}